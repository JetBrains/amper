{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Module.json",
  "title": "Module schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/$defs/Module"
    }
  ],
  "$defs": {
    "Module": {
      "type": "object",
      "patternProperties": {
        "^dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        },
        "^test-dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^test-settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        }
      },
      "properties": {
        "aliases": {
          "type": "array",
          "items": {
            "patternProperties": {
              "^[^@+:]+$": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "apply": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "module": {
          "$ref": "#/$defs/Meta"
        },
        "product": {
          "$ref": "#/$defs/ModuleProduct"
        },
        "dependencies": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "repositories": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/Repository"
          }
        },
        "settings": {
          "$ref": "#/$defs/Settings"
        },
        "tasks": {
          "type": "array",
          "items": {
            "patternProperties": {
              "^[^@+:]+$": {
                "$ref": "#/$defs/TaskSettings"
              }
            }
          }
        },
        "test-dependencies": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "test-settings": {
          "$ref": "#/$defs/Settings"
        }
      },
      "additionalProperties": false
    },
    "Meta": {
      "type": "object",
      "properties": {
        "layout": {
          "enum": ["gradle-kmp","gradle-jvm","default"]
        }
      },
      "additionalProperties": false
    },
    "ModuleProduct": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "platforms": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "enum": ["js","jvm","wasm","android","linuxX64","linuxArm64","tvosArm64","tvosX64","tvosSimulatorArm64","macosX64","macosArm64","iosArm64","iosSimulatorArm64","iosX64","watchosArm64","watchosArm32","watchosDeviceArm64","watchosSimulatorArm64","mingwX64","androidNativeArm32","androidNativeArm64","androidNativeX64","androidNativeX86"]
              }
            },
            "type": {
              "enum": ["lib","jvm/app","android/app","ios/app","macos/app","linux/app","windows/app"],
              "x-intellij-enum-order-sensitive": true
            }
          },
          "additionalProperties": false
        },
        {
          "enum": ["lib","jvm/app","android/app","ios/app","macos/app","linux/app","windows/app"],
          "x-intellij-enum-order-sensitive": true
        }
      ]
    },
    "CatalogDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ExternalMavenDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "InternalDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Repository": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "credentials": {
              "$ref": "#/$defs/Credentials"
            },
            "id": {
              "type": "string"
            },
            "publish": {
              "type": "boolean"
            },
            "resolve": {
              "type": "boolean"
            },
            "url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "string"
        }
      ]
    },
    "Credentials": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "passwordKey": {
          "type": "string"
        },
        "usernameKey": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "Settings": {
      "type": "object",
      "properties": {
        "android": {
          "x-intellij-metadata": {"platforms": ["android"]},
          "$ref": "#/$defs/AndroidSettings"
        },
        "compose": {
          "$ref": "#/$defs/ComposeSettings"
        },
        "ios": {
          "x-intellij-metadata": {"platforms": ["ios"]},
          "$ref": "#/$defs/IosSettings"
        },
        "junit": {
          "x-intellij-metadata": {"platforms": ["jvm", "android"]},
          "enum": ["junit-4","junit-5","none"]
        },
        "jvm": {
          "x-intellij-metadata": {"platforms": ["jvm"]},
          "$ref": "#/$defs/JvmSettings"
        },
        "kotlin": {
          "$ref": "#/$defs/KotlinSettings"
        },
        "kover": {
          "$ref": "#/$defs/KoverSettings"
        },
        "native": {
          "x-intellij-metadata": {"platforms": ["native"]},
          "$ref": "#/$defs/NativeSettings"
        },
        "publishing": {
          "$ref": "#/$defs/PublishingSettings"
        }
      },
      "additionalProperties": false
    },
    "AndroidSettings": {
      "type": "object",
      "properties": {
        "applicationId": {
          "type": "string"
        },
        "compileSdk": {
          "enum": ["34","33","32","31","30","29","28","27","26","25","24","23","22","21"],
          "x-intellij-enum-order-sensitive": true
        },
        "maxSdk": {
          "enum": ["34","33","32","31","30","29","28","27","26","25","24","23","22","21"],
          "x-intellij-enum-order-sensitive": true
        },
        "minSdk": {
          "enum": ["34","33","32","31","30","29","28","27","26","25","24","23","22","21"],
          "x-intellij-enum-order-sensitive": true
        },
        "namespace": {
          "type": "string"
        },
        "targetSdk": {
          "enum": ["34","33","32","31","30","29","28","27","26","25","24","23","22","21"],
          "x-intellij-enum-order-sensitive": true
        }
      },
      "additionalProperties": false
    },
    "ComposeSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "version": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "enabled"
          ]
        }
      ]
    },
    "IosSettings": {
      "type": "object",
      "properties": {
        "framework": {
          "x-intellij-metadata": {"productTypes": ["lib"]},
          "$ref": "#/$defs/IosFrameworkSettings"
        },
        "teamId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "IosFrameworkSettings": {
      "type": "object",
      "properties": {
        "basename": {
          "type": "string"
        },
        "isStatic": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "JvmSettings": {
      "type": "object",
      "properties": {
        "mainClass": {
          "x-intellij-metadata": {"productTypes": ["jvm/app"]},
          "type": "string"
        },
        "release": {
          "enum": ["25","24","23","22","21","17","11","8"],
          "x-intellij-enum-order-sensitive": true
        }
      },
      "additionalProperties": false
    },
    "KotlinSettings": {
      "type": "object",
      "properties": {
        "allWarningsAsErrors": {
          "type": "boolean"
        },
        "apiVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"],
          "x-intellij-enum-order-sensitive": true
        },
        "debug": {
          "x-intellij-metadata": {"platforms": ["native"]},
          "type": "boolean"
        },
        "freeCompilerArgs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageFeatures": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"],
          "x-intellij-enum-order-sensitive": true
        },
        "linkerOpts": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "optIns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "progressiveMode": {
          "type": "boolean"
        },
        "serialization": {
          "$ref": "#/$defs/SerializationSettings"
        },
        "suppressWarnings": {
          "type": "boolean"
        },
        "verbose": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "SerializationSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "format": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "json",
            "none"
          ]
        }
      ]
    },
    "KoverSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "html": {
              "$ref": "#/$defs/KoverHtmlSettings"
            },
            "xml": {
              "$ref": "#/$defs/KoverXmlSettings"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "enabled"
          ]
        }
      ]
    },
    "KoverHtmlSettings": {
      "type": "object",
      "properties": {
        "charset": {
          "type": "string"
        },
        "onCheck": {
          "type": "boolean"
        },
        "reportDir": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "KoverXmlSettings": {
      "type": "object",
      "properties": {
        "onCheck": {
          "type": "boolean"
        },
        "reportFile": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "NativeSettings": {
      "type": "object",
      "properties": {
        "entryPoint": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PublishingSettings": {
      "type": "object",
      "properties": {
        "group": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "TaskSettings": {
      "type": "object",
      "properties": {
        "dependsOn": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
