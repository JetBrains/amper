{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/deft/pot-dsl",
  "title": "Deft Pot DSL",
  "allOf": [
    {
      "$ref": "CommonDeftSchema.json#/$defs/DeftSchema"
    },
    {
      "type": "object",
      "properties": {
        "apply": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "product": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "$ref": "#/$defs/productType"
                },
                "platforms": {
                  "$ref": "#/$defs/platformList"
                }
              },
              "required": [
                "type",
                "platforms"
              ]
            },
            {
              "$ref": "#/$defs/productType"
            }
          ]
        }
      }
    }
  ],

  "$defs": {
    "platform": {
      "enum": [
        "js",
        "jvm",
        "wasm",
        "android",
        "linuxX64",
        "linuxArm64",
        "tvosArm64",
        "tvosX64",
        "tvosSimulatorArm64",
        "macosX64",
        "macosArm64",
        "iosArm64",
        "iosX64",
        "iosSimulatorArm64",
        "watchosArm64",
        "watchosArm32",
        "watchosDeviceArm64",
        "watchosSimulatorArm64",
        "mingwX64",
        "androidNativeArm32",
        "androidNativeArm64",
        "androidNativeX64",
        "androidNativeX86"
      ]
    },
    "productType": {
      "enum": [
        "lib",
        "jvm/app",
        "macos/app",
        "android/app",
        "linux/app"
      ]
    },
    "platformList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/platform"
      }
    }
  }
}
